<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Case_Close_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(NOT(ISCHANGED(Status)),ISPICKVAL(Status,&quot;Closed&quot;))</errorConditionFormula>
    <errorMessage>Can&apos;t edit a closed case. Re-open to edit</errorMessage>
</ValidationRule>
