<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validation_For_Communcation_Mode</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Status, &quot;Closed&quot;),
  ISPICKVAL(Communication_Mode__c ,&quot;&quot;)     
)</errorConditionFormula>
    <errorDisplayField>Communication_Mode__c</errorDisplayField>
    <errorMessage>Please select a Communication Mode (Email, Call, or Chat) before closing the case.</errorMessage>
</ValidationRule>
