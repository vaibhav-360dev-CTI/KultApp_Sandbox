<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Disable_editing_when_closed</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
    ISPICKVAL(Status, &quot;Closed&quot;),
    NOT(Is_Re_Opened__c)
)</errorConditionFormula>
    <errorMessage>Can&apos;t edit a closed case. Re-Open to edit</errorMessage>
</ValidationRule>
